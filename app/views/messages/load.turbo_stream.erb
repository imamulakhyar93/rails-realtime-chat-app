<%= turbo_stream.replace 'load_more' do %>
  <% if @next_page %>
    <%= turbo_frame_tag 'load_more' do %>
      <%= form_with url: load_messages_path do |form| %>
        <%= form.hidden_field :page, value: @next_page %>
        <%= form.submit 'Load more', class: 'px-3 py-1 rounded-full mb-3 bg-royalblue-400 text-xs text-white font-bold cursor-pointer hover:bg-royalblue-500 focus:outline-none' %>
      <% end %>
    <% end %>
  <% end %>

  <% @messages.reverse.each do |message| %>
    <%= render 'messages/partials/message_item', message: message %>
  <% end %>
<% end %>
